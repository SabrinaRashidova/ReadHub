<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/item_background"
    android:layout_height="wrap_content">

    <!--
    val title: String,
    val author: String,
    val image: Int? = null,
    val desc: String,
    val resourceUrl: String? = null,
    val videoUrl: String? = null
    -->


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Here is Title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/angkor"/>

    <TextView
        android:id="@+id/txt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Here should be author"
        android:textColor="@color/black"
        android:fontFamily="@font/biorhyme_extralight"/>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:src = "@drawable/tutorial_img"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/lorem_ipsum"
        android:textColor="@color/black"
        android:fontFamily="@font/biorhyme_extralight"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txt_resource_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text = "Here should be rescourse URL"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_vide_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Here should ve Video URL"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>
</LinearLayout>